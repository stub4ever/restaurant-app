<p id="notice"><%= notice %></p>

<h1>Listing Restaurants</h1>

    <% @restaurants.each do |restaurant| %>
    <ul>
      <li><h2><%= link_to restaurant.name, restaurant %></h2></li>
      <li>Address: <%= restaurant.address %></li>
      <li>Phone Number: <%= restaurant.phone_number %></li>
      <li>Category: <%= restaurant.category %></li>
      <li><%= link_to 'Edit', edit_restaurant_path(restaurant) %></li>
      <li><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    </ul>
    <% end %>

<br>

